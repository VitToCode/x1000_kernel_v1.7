choice
	prompt "PRODUCT type"
	depends on SOC_M200
	default PRODUCT_DEVELOP

config BOARD_4785_FPGA
       bool "FPGA"

config PRODUCT_DEVELOP
       bool "DEVELOP"

config BOARD_DORADO_V20
       bool "board dorado v20"
       depends on PRODUCT_DEVELOP

config BOARD_DORADO_V21
       bool "board dorado v21"
       depends on PRODUCT_DEVELOP

config BOARD_DORADO_V30
       bool "board dorado v30"
       depends on PRODUCT_DEVELOP

config BOARD_FORNAX
       bool "FORNAX"
endchoice

config PRODUCT_NAME
	string
	default "fpga" if BOARD_4785_FPGA
	default "dorado" if PRODUCT_DEVELOP
	default "fornax" if BOARD_FORNAX

config BOARD_NAME
	string
	default "dorado_v20" if BOARD_DORADO_V20

config BOARD_NAME
	string
	default "dorado_v21" if BOARD_DORADO_V21

config BOARD_NAME
	string
	default "dorado_v30" if BOARD_DORADO_V30
